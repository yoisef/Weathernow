<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/d"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:padding="5dp"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layoutDirection="rtl"
           android:layout_height="wrap_content">

   <EditText
       android:layout_width="0dp"
       android:layout_margin="5dp"
       android:hint="Search by City"
       android:layout_weight="3"
       android:id="@+id/autocomplete"
       android:layout_height="wrap_content" />
           <Button
               android:layout_width="0dp"
               android:background="@color/black"
               android:layout_margin="5dp"
               android:alpha=".5"
               android:id="@+id/searchbutton"
               android:text="Search"
               android:textColor="@color/white"
               android:layout_weight="1"
               android:layout_height="wrap_content" />
       </LinearLayout>
      <TextView
          android:layout_width="match_parent"
          android:textStyle="bold"
          android:textColor="@color/white"
          android:id="@+id/city"
          android:layout_margin="5dp"
          android:layout_height="wrap_content"
          android:textSize="35sp"
          android:text="Alexandria"/>
      <TextView
          android:layout_width="match_parent"
          android:id="@+id/country"
          android:textColor="@color/white"
          android:textStyle="bold"
          android:layout_margin="5dp"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:text="Egypt"/>
      <TextView
          android:layout_width="match_parent"
          android:id="@+id/data"
          android:textColor="@color/white"
          android:layout_margin="5dp"
          android:layout_height="wrap_content"
          android:textSize="17sp"
          android:layout_marginBottom="15dp"
          android:text="19/6"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <ImageView
             android:layout_width="50dp"
             android:scaleType="centerCrop"
             android:id="@+id/imgcondition"
             android:layout_margin="5dp"
             android:layout_height="50dp" />
         <TextView
             android:layout_width="wrap_content"
             android:id="@+id/textcondition"
             android:textSize="20sp"
             android:layout_gravity="center"
             android:gravity="center"
             android:textColor="@color/white"
             android:textStyle="bold"
             android:text="Mostly wind"
             android:layout_height="wrap_content" />

      </LinearLayout>
      <TextView
          android:layout_width="match_parent"
          android:text="26Â°"
          android:id="@+id/temperaturee"
          android:layout_margin="5dp"
          android:textSize="70sp"
          android:textStyle="bold"
          android:textColor="@color/white"
          android:layout_height="wrap_content" />
       <TextView
           android:layout_width="match_parent"
           android:textSize="20sp"
           android:textColor="@color/black"
           android:gravity="center"
           android:id="@+id/tgrbatext"
           android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="match_parent">
           <LinearLayout
               android:layout_width="match_parent"
               android:alpha=".5"
               android:background="@color/black"
               android:layout_height="match_parent"></LinearLayout>

           <TextView
               android:layout_width="wrap_content"
               android:textSize="20sp"
               android:id="@+id/detail"
               android:layout_margin="5dp"
               android:textColor="@color/white"
               android:text="Details"
               android:layout_height="wrap_content" />
           <View
               android:layout_width="match_parent"
               android:id="@+id/viewe"
               android:layout_alignBottom="@id/detail"
               android:layout_height="1dp"
              android:background="#fff"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_alignTop="@id/viewe"
               android:layout_height="match_parent">
              <ImageView
                  android:layout_width="100dp"
                  android:id="@+id/imgcon2"
                  android:layout_margin="10dp"
                  android:layout_gravity="center"
                  android:layout_height="100dp" />
              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_margin="10dp"
                  android:orientation="vertical"

                  android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="humidity"
                        android:id="@+id/hum"
                        android:layout_margin="3dp"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_height="wrap_content" />

                 <View
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:layout_marginBottom="5dp"
                     android:textColor="@color/black"
                     android:background="@color/black"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:text="cloud"
                     android:id="@+id/cloud"
                     android:textColor="@color/white"
                     android:textSize="15sp"
                     android:layout_height="wrap_content" />
                 <View
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:layout_marginBottom="5dp"

                     android:background="@color/black"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:text="Wind"

                     android:textColor="@color/white"
                     android:textSize="15sp"
                     android:layout_height="wrap_content" />
                 <View
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:layout_marginBottom="5dp"
                     android:textColor="@color/black"
                     android:background="@color/black"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:text="Feels like"
                     android:textColor="@color/white"
                     android:textSize="15sp"
                     android:layout_height="wrap_content" />
                 <View
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:layout_marginBottom="5dp"
                     android:background="@color/black"/>

              </LinearLayout>
              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_weight=".3"
                  android:layout_margin="10dp"
                  android:orientation="vertical"

                  android:layout_height="wrap_content">

                 <TextView
                     android:layout_width="wrap_content"
                     android:text="humidity"
                     android:id="@+id/humval"
                     android:layout_margin="3dp"
                     android:textColor="@color/white"
                     android:textSize="15sp"
                     android:layout_height="wrap_content" />

                 <View
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:layout_marginBottom="5dp"
                     android:textColor="@color/black"
                     android:background="@color/black"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:text="cloud"
                     android:id="@+id/cloudval"
                     android:textColor="@color/white"
                     android:textSize="15sp"
                     android:layout_height="wrap_content" />
                 <View
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:layout_marginBottom="5dp"

                     android:background="@color/black"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:text="Wind"
                     android:id="@+id/windval"

                     android:textColor="@color/white"
                     android:textSize="15sp"
                     android:layout_height="wrap_content" />
                 <View
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:layout_marginBottom="5dp"
                     android:textColor="@color/black"
                     android:background="@color/black"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:text="Feels like"
                     android:id="@+id/feelval"
                     android:textColor="@color/white"
                     android:textSize="15sp"
                     android:layout_height="wrap_content" />
                 <View
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:layout_marginBottom="5dp"
                     android:background="@color/black"/>

              </LinearLayout>



           </LinearLayout>
        </RelativeLayout>
       <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="200dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:layout_alignParentTop="true"
               android:id="@+id/sv"
               android:alpha=".5"
               android:background="@color/black"></LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="match_parent">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:id="@+id/vb"
                  android:layout_height="wrap_content">

                 <TextView
                     android:layout_width="wrap_content"
                     android:textSize="20sp"
                     android:id="@+id/forecasttitle"
                     android:layout_margin="5dp"
                     android:textColor="@color/white"
                     android:text="Forecast"
                     android:layout_height="wrap_content" />
                 <View
                     android:layout_width="match_parent"
                     android:id="@+id/viewee"
                     android:layout_alignBottom="@id/forecasttitle"
                     android:layout_height="1dp"
                     android:background="#fff"/>
                  <android.support.v7.widget.RecyclerView
                      android:layout_width="match_parent"
                      android:id="@+id/forcastrecycle"
                      android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_marginLeft="7dp"
                  android:layout_marginRight="7dp"
                  android:id="@+id/titlebar"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
                 <TextView
                     android:layout_width="0dp"
                     android:textSize="18sp"
                     android:layout_weight="1"
                     android:gravity="center"
                     android:text="Data"
                     android:textColor="@color/white"
                     android:layout_height="wrap_content" />
                 <TextView
                     android:layout_width="0dp"
                     android:textSize="18sp"
                     android:gravity="center"
                     android:layout_weight="1.5"
                     android:textColor="@color/white"
                     android:text="Condition"
                     android:layout_height="wrap_content" />
                 <TextView
                     android:layout_width="0dp"
                     android:textSize="18sp"
                     android:gravity="center"
                     android:layout_weight=".6"
                     android:textColor="@color/white"
                     android:text="Max"
                     android:layout_height="wrap_content" />
                 <TextView
                     android:layout_width="0dp"
                     android:textSize="18sp"
                     android:gravity="center"
                     android:layout_weight=".6"
                     android:textColor="@color/white"
                     android:text="Avg"
                     android:layout_height="wrap_content" />
                 <TextView
                     android:layout_width="0dp"
                     android:textSize="18sp"
                     android:gravity="center"
                     android:textColor="@color/white"
                     android:layout_weight=".6"
                     android:text="Min"
                     android:layout_height="wrap_content" />


              </LinearLayout>
              <View
                  android:layout_width="match_parent"
                  android:id="@+id/vieweee"
                  android:layout_height="1dp"
                  android:background="#fff"/>



           </LinearLayout>




        </RelativeLayout>







   </LinearLayout>
</LinearLayout>
